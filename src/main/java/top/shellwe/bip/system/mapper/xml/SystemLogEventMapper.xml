<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.shellwe.bip.system.mapper.SystemLogEventMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="top.shellwe.bip.system.entity.SystemLogEvent">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="url" property="url" />
		<result column="ip" property="ip" />
		<result column="user_id" property="userId" />
		<result column="status" property="status" />
		<result column="execute_time" property="executeTime" />
		<result column="gmt_create" property="gmtCreate" />
		<result column="gmt_modified" property="gmtModified" />
	</resultMap>


  <!--    <resultMap id="ResultMap" type="top.shellwe.bip.system.dto.output.BasicRoleView" extends="BaseResultMap"></resultMap>-->

    <select id="selectSystemLogs" resultMap="BaseResultMap">
        SELECT
             sle.*,bu.userName as username
        FROM system_log_event sle
        LEFT JOIN basic_user bu ON sle.user_id = bu.id
        WHERE
             1 = 1
        <if test="filter.id!=null and filter.id!=''">
            AND sle.id = #{filter.id}
        </if>
        <if test="filter.username!=null and filter.username!=''">
            AND	bu.userName like '%${filter.username}%'
        </if>
        <if test="filter.url!=null and filter.url!=''">
            AND	sle.url like '%${filter.url}%'
        </if>
        <if test="filter.startTime!=null">
            AND <![CDATA[sle.gmt_create >= #{filter.startTime}]]>
        </if>
        <if test="filter.endTime!=null">
            AND <![CDATA[sle.gmt_create <= #{filter.endTime}]]>
        </if>
        ORDER BY sle.id DESC
    </select>

</mapper>
